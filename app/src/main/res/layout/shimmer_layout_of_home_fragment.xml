<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_Layout1"
        android:layout_marginTop="30dp"
      >

        <TextView
            android:id="@+id/welcome1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:background="#DDDDDD"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular"/>
        <TextView
            android:id="@+id/patientName_Textview1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:layout_marginStart="30dp"
            android:background="#DDDDDD"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibribold"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_pic_image_view1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="30dp"
            android:padding="4dp"
            app:shapeAppearance="@style/circular"
            android:background="#DDDDDD"
             />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/header_Cardview1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/welcome_Layout1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD"
            android:orientation="vertical">



        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/header_Cardview1"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDDDDD">


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"

            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDDDDD"
                >

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>