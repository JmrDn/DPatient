<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="2dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lastMessage_time_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:text="12:01 PM"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/profilePic_Layout">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profilePicture_Imageview"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/profile_pic"
                    android:background="#FAFAFA"
                    app:strokeWidth="3dp"
                    android:padding="3dp"
                    app:strokeColor="@color/patient_color_bg"
                    app:shapeAppearance="@style/circular"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/profilePic_Layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Felisco"
                    android:fontFamily="@font/calibribold"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/lastMessage_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="80dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:fontFamily="@font/calibri_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>