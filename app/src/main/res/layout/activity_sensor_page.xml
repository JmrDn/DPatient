<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SensorPage">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/sensor_Imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/connect_to_sensor_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/connected_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:fontFamily="@font/calibribold"
        android:layout_below="@+id/sensor_Imageview"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/sensorId_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49532"
        android:fontFamily="@font/calibri_regular"
        android:textSize="20sp"
        android:visibility="visible"
        android:textColor="@color/black"
        android:layout_below="@id/connected_Textview"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/disconnect_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:textAllCaps="false"
        android:fontFamily="@font/calibribold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/custom_disconnect_button_bg"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/sensorId_Textview"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>