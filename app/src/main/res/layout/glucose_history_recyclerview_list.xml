<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/date_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10/2023"
            android:fontFamily="@font/calibribold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/time_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:45 AM"
            android:fontFamily="@font/calibribold"
            android:layout_below="@id/date_Textview"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/glucoseLevelStatus_Cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/highGlucoseBackgroundColor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/glucoseLevelStatus_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:fontFamily="@font/calibribold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/glucoseLevel_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101"
            android:fontFamily="@font/calibribold"
            android:textSize="50sp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/mgdL_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mg/dL"
            android:fontFamily="@font/calibribold"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/glucoseLevel_Textview"
            android:textColor="#000000"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>