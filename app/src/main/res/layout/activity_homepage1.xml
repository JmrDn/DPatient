<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Homepage1">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/bottomNavigation"
       android:id="@+id/container"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/connectToSensor_Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:fontFamily="@font/calibribold"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/connect_to_sensor_2"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_connect_to_sensor_btn"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/white"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="auto"
        app:itemIconTint="@drawable/selected_item_bottom_nav"
        app:itemTextColor="@drawable/selected_item_bottom_nav"
        app:itemPaddingTop="0dp"
        android:paddingTop="10dp"
        android:id="@+id/bottomNavigation"
        style="@style/NoHoverBottomNavigation"
        app:elevation="10dp"

        />

</RelativeLayout>